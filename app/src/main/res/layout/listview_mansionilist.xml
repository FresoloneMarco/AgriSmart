<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/space_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/space_up"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:text="DATA"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data"
        app:srcCompat="@drawable/card_surface_home" />

    <TextView
        android:id="@+id/title_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mansione n1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/imageView6"
        />

    <TextView
        android:id="@+id/subtitle_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Descrizione Mansione 1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="114dp"
        app:layout_constraintTop_toBottomOf="@+id/title_card1"
        />

    <Button
        android:id="@+id/bt_read_card1"
        android:layout_width="64dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_card1"
        android:backgroundTint="#FFFFFF"
        android:text="LEGGI"
        android:textColor="#8BC34A"
        />

    <Button
        android:id="@+id/bt_serra_card1"
        android:layout_width="80dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toRightOf="@id/bt_read_card1"
        app:layout_constraintTop_toBottomOf="@id/subtitle_card1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="#FFFFFF"
        android:text="SERRA 1"
        android:textColor="#8BC34A"
        />

    <TextView
        android:id="@+id/space_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_serra_card1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>