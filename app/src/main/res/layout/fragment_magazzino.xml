<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/concimi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONCIMI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <ListView
        android:id="@+id/concimi_lv"
        app:layout_constraintTop_toBottomOf="@id/concimi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <TextView
        android:id="@+id/trattamenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRATTAMENTI"
        app:layout_constraintTop_toBottomOf="@id/concimi_lv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <ListView
        android:id="@+id/trattamenti_lv"
        app:layout_constraintTop_toBottomOf="@id/trattamenti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <TextView
        android:id="@+id/semi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEMI"
        app:layout_constraintTop_toBottomOf="@id/trattamenti_lv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <ListView
        android:id="@+id/semi_lv"
        app:layout_constraintTop_toBottomOf="@id/semi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>